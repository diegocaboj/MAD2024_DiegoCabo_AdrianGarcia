    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#54F4F8F8"
    android:orientation="vertical"
    tools:context=".SecondActivity">

    <!-- First Button -->

    <!-- Second Button, placed next to the first button -->


